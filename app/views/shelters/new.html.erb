<section class=new>
  <h3> Add A New Shelter: </h3> </br>
  <%= form_tag '/shelters' do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %> </br>
    <%= label_tag :address %>
    <%= text_field_tag :address %></br>
    <%= label_tag :city %>
    <%= text_field_tag :city %></br>
    <%= label_tag :state %>
    <%= text_field_tag :state %></br>
    <%= label_tag :zip %>
    <%= text_field_tag :zip %></br></br>
    <%= submit_tag 'Create Shelter' %>
  <% end %>
</section>
