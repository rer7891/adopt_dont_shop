<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :image %>
  <%= text_field_tag(:image, @pet.image) %>
  <%= label_tag :name %>
  <%= text_field_tag(:name, @pet.name) %>
  <%= label_tag :description %>
  <%= text_field_tag(:description, @pet.description) %></br>
  <%= label_tag :age %>
  <%= text_field_tag(:age, @pet.age) %></br>
  <%= label_tag :sex %>
  <%= text_field_tag(:sex, @pet.sex) %></br>
  <%= label_tag :status %>
  <%= text_field_tag(:status, @pet.status) %></br>
  <%= submit_tag 'Update Pet Details' %>
<% end %>
